<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Contact Us - Clear Earth</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom CSS -->
  <link rel="stylesheet" href="css/contact.css">
</head>
<body class="bg-light">

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/">♻️ ClearEarth</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
          <li class="nav-item"><a class="nav-link" href="/ai">AI Identifier</a></li>
          <li class="nav-item"><a class="nav-link" href="/learn">Learn Segregation</a></li>
          <li class="nav-item"><a class="nav-link active" href="/contact">Contact Us</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Contact Section -->
  <main class="container py-5 mt-5">
    <h2 class="text-center text-primary fw-bold mb-5">📬 Contact Us</h2>

    <div class="row justify-content-center">
      <!-- Company Info -->
      <div class="col-md-5 mb-4">
        <div class="card p-4 shadow-lg border-0 bg-white">
          <h4 class="text-success fw-bold">Reach Out to Us</h4>
          <p class="mb-2">📧 Email: <a href="mailto:info@clearearth.com">info@clearearth.com</a></p>
          <p class="mb-2">📞 Phone: <a href="tel:+911234567890">+91 1234567890</a></p>
          <p class="text-secondary">We are happy to answer your questions and hear your feedback!</p>
        </div>
      </div>

      <!-- Feedback Form -->
      <div class="col-md-6 mb-4">
        <div class="card p-4 shadow-lg border-0 bg-white feedback-card">
          <h4 class="text-primary fw-bold mb-3">Send Us Your Feedback</h4>
          <form id="feedbackForm">
            <div class="mb-3">
              <label for="name" class="form-label">Name</label>
              <input type="text" id="name" class="form-control" required>
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" id="email" class="form-control" required>
            </div>
            <div class="mb-3">
              <label for="message" class="form-label">Message</label>
              <textarea id="message" rows="4" class="form-control" required></textarea>
            </div>
            <button type="submit" class="btn btn-success fw-bold px-4 py-2">Send Feedback</button>
            <div id="feedbackResponse" class="mt-3 fw-bold"></div>
          </form>
        </div>
      </div>
    </div>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="js/contact.js"></script>
</body>
</html>
